### general aliases
# navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"

# ls
alias ls='ls -CF --color=auto'
alias ll='ls -l'
alias la='ls -A'

# using user aliases when sudoing
alias sudo='sudo '

### specific aliases
alias nload='nload venet0 -u M'

alias bak='backup'

