[alias]
    a = add --patch
    amd = commit --amend
    ads = "!sh -c 'git add ${@} && git st' -"
    br = branch
    bra = branch --all -vv
    cb = checkout -b
    ci = commit
    cm = commit -m
    co = checkout
    cp = cherry-pick
    d = diff --word-diff=color
    fe = fetch
    l = log --graph --abbrev-commit --decorate
    la = "!sh -c 'git l --branches --remotes --tags' -"
    resh = reset --hard
    restore = checkout --
    # to use after `git reflog'
    rewind = "!sh -c 'git reset --hard HEAD@{${1}}' -"
    sa = "!sh -c 'git stash apply --index stash@{${1}}' -"
    sdel = "!sh -c 'git stash drop stash@{${1}}' -"
    # show stash diff for tracked files
    sdif = "!sh -c 'git stash show -p stash@{${1}}' -"
    # show stash diff for *UN*tracked files
    sdifu = "!sh -c 'git show -p stash@{${1}}^3' -"
    sl = stash list
    sm = submodule
    sms = submodule sync
    smu = submodule update --init --recursive
    smur = smu --remote
    ss = stash save --include-untracked
    st = status
    unstage = reset HEAD
    uns = unstage
[color]
    ui = auto
[color "status"]
    added = green
    changed = blue
    untracked = magenta
    updated = green
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    pager = less -F -S -R -X
[credential]
    helper = cache --timeout=28800
[credential "https://github.com"]
    username = nagromc
[format]
    pretty = %C(red)%h%C(reset) - %C(green)(%ad)%C(reset) %C(blue)<%an>%C(reset)%C(auto)%d%C(reset) %s
[log]
    date = relative
[pager]
    stash = false
[pull]
    rebase = preserve
[push]
    default = simple
[status]
    branch = true
    short = true
[user]
    name = Morgan Courbet
    email = nagromc@users.noreply.github.com
# local customization
[include]
    path = ~/.gitconfig_local
