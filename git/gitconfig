[alias]
    a = add --patch
    amd = commit --amend
    ads = "!sh -c 'git add ${@} && git st' -"
    br = branch
    cb = checkout -b
    ci = commit
    cm = commit -m
    co = checkout
    cp = cherry-pick
    d = diff --word-diff=color
    confed = "! vim ~/.gitconfig"
    fe = fetch
    l = log --graph --abbrev-commit --decorate
    la = "!sh -c 'git l --branches --remotes --tags' -"
    lsbr = branch -vv
    lsbra = branch --all -vv
    lsbrr = branch --remote -vv
    patch = diff --patch --no-color
    pl = pull
    ps = push
    psf = push --force
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    rbs = rebase --skip
    rem = remote
    # delete a branch on the repo
    remrmbr = push origin --delete
    resh = reset --hard
    restore = checkout --
    # to use after `git reflog'
    rewind = "!sh -c 'git reset --hard HEAD@{${1}}' -"
    sm = submodule
    sms = submodule sync
    smu = submodule update --init --recursive
    smur = smu --remote
    ssa = "!sh -c 'git stash apply --index stash@{${1}}' -"
    # show stash diff for tracked files
    ssdif = "!sh -c 'git stash show -p stash@{${1}}' -"
    # show stash diff for *UN*tracked files
    ssdifu = "!sh -c 'git show -p stash@{${1}}^3' -"
    ssls = stash list
    sspop = stash pop
    ssrm = "!sh -c 'git stash drop stash@{${1}}' -"
    sss = stash save --include-untracked
    st = status
    # remove the deleted remote branches existing on the local repo
    syncrembr = remote prune origin
    unstage = reset HEAD
    uns = unstage
[color]
    ui = auto
[color "status"]
    added = green
    changed = blue
    untracked = magenta
    updated = green
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    pager = less -F -S -R -X
[credential]
    helper = cache --timeout=28800
[credential "https://github.com"]
    username = nagromc
[format]
    pretty = %C(red)%h%C(reset) - %C(green)(%ad)%C(reset) %C(blue)<%an>%C(reset)%C(auto)%d%C(reset) %s
[http]
    #proxy = http://<user>:<password>@<host_name>:<host_port>
[log]
    date = relative
[pager]
    stash = false
[pull]
    rebase = preserve
[push]
    default = simple
[status]
    branch = true
    short = true
[user]
    name = Morgan Courbet
    email = nagromc@users.noreply.github.com
# local customization
[include]
    path = ~/.gitconfig_local
